@model FitKitApp.ViewModels.KorisniciSearchViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Корисници</h1>

<p>
    <a asp-action="Create">Креирај Нов</a>
</p>
<form asp-controller="Users" asp-action="Index" method="get">
    <p>
        Име: <input type="text" asp-for="searchStringImeKorisnik" />

        Презиме: <input type="text" asp-for="searchStringPrezimeKorisnik"/> 
        
        <input type="submit" value="Барај" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Prezime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].BirthDate)
            </th>
            <th hidden>
                @Html.DisplayNameFor(model => model.Users[0].ProfilePic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Visina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Tezina)
            </th>
            <th>
                Обеми(мерки)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Users) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prezime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Visina)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tezina)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Провери обеми</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Промени</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Избриши</a>
            </td>
        </tr>
}
    </tbody>
</table>
