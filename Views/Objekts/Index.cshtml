@model FitKitApp.ViewModels.ObjektSeachViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Објекти</h1>

<p>
    <a asp-action="Create">Додади Нов Објект</a>
</p>
<form asp-controller="Objekts" asp-action="Index" method="get">
    <p>
        Име: <input type="text" asp-for="searchStringImeObjekt" />

        Тип на вежбање: <select asp-for="searchStringTipVezbanje" asp-items="Model.TipoviVezbanje">
                        <option value="">All</option>
                        </select>
        <input type="submit" value="Барај" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Objekts[0].Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Objekts[0].Kvadratura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Objekts[0].Lokacija)
            </th>
            <th>
                Посетители
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Objekts[0].TipVezbanje)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.OtvorZatvor)
            </th>*@
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Objekts) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kvadratura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lokacija)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxClients)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipVezbanje)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.OtvorZatvor)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Промени</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Избриши</a>
            </td>
        </tr>
}
    </tbody>
</table>
