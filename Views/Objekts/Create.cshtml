@model FitKitApp.Models.Objekt

@{
    ViewData["Title"] = "Create";
}

<h1>Додади објект</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ime" class="control-label"></label>
                <input asp-for="Ime" class="form-control" />
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kvadratura" class="control-label"></label>
                <input asp-for="Kvadratura" class="form-control" />
                <span asp-validation-for="Kvadratura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lokacija" class="control-label"></label>
                <input asp-for="Lokacija" class="form-control" />
                <span asp-validation-for="Lokacija" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxClients" class="control-label"></label>
                <input asp-for="MaxClients" class="form-control" />
                <span asp-validation-for="MaxClients" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipVezbanje" class="control-label"></label>
                <input asp-for="TipVezbanje" class="form-control" />
                <span asp-validation-for="TipVezbanje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OtvorZatvor" class="control-label"></label>
                <input asp-for="OtvorZatvor" class="form-control" />
                <span asp-validation-for="OtvorZatvor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Coach1Id" class="control-label">Прв Тренер</label>
                <select asp-for="Coach1Id" class ="form-control" asp-items="ViewBag.Coach1Id"></select>
            </div>
            <div class="form-group">
                <label asp-for="Coach2Id" class="control-label">Втор Тренер</label>
                <select asp-for="Coach2Id" class ="form-control" asp-items="ViewBag.Coach2Id"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Креирај" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
