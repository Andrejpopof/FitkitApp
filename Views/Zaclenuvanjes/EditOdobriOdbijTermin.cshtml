@model FitKitApp.Models.Zaclenuvanje

@{
    ViewData["Title"] = "EditOdobriOdbijTermin";
}

<h3>Одобри/Одбиј Термин</h3>

<h5>Статус за термин за корисникот: <b>@Model.User.FullName</b></h5><br>
<h5>Објект: <b>@Model.Objekt.Ime</b></h5><br>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditOdobriOdbijTermin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group" hidden>
                <label asp-for="UserId" class="control-label">Корисник</label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="ObjektId" class="control-label">Објект</label>
                <select asp-for="ObjektId" class="form-control" asp-items="ViewBag.ObjektId"></select>
                <span asp-validation-for="ObjektId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Termin" class="control-label"></label>
                <input asp-for="Termin" class="form-control" readonly/>
                <span asp-validation-for="Termin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OdobrenNeodobren" class="control-label"></label>
                <input asp-for="OdobrenNeodobren" class="form-control" />
                <span asp-validation-for="OdobrenNeodobren" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

