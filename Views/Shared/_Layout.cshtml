<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Фит-Кит</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href ="https://cdn.jsdelivr.npm/select2@4.0.13/dist/css/select2.min.css rel ="stylesheet"/>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                @if (User.Identity.IsAuthenticated)
                {
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="navbar-brand" asp-area="" asp-controller="Objekts" asp-action="Index">Фит-Кит</a>
                    }
                    @if (User.IsInRole("Coach"))
                    {
                        <a class="navbar-brand" asp-area="" asp-controller="Coach" asp-action="TerminiCoach" class="navbar-brand">Фит-Кит</a>
                    }
                    @if (User.IsInRole("User"))
                    {
                        <a class="navbar-brand" asp-area="" asp-controller="User" asp-action="TerminiUser" class="navbar-brand">Фит-Кит</a>
                    }

                }
                else
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Account" asp-action="Login">Фит Кит</a>
                }

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">

                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Objekts" asp-action="Index">Објекти</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">Корисници</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Coaches" asp-action="Index">Инструктори</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Zaclenuvanjes" asp-action="Index">Термини</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Акаунти</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Role" asp-action="Index">Улоги</a>
                                </li>
                            }
                            @if (User.IsInRole("Coach"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Coach" asp-action="TrenerUvid">Термини за увид</a>
                                </li>

                            }
                        }


                    </ul>
                </div>
                <div class=" float-right pull-right">
                    <ul class="nav navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="navbar-brand" asp-area="" asp-controller="Account" asp-action="Logout">Одјави се</a>
                        }
                        else
                        {
                            <a class="navbar-brand" asp-area="" asp-controller="Account" asp-action="Login">Најави се</a>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            @if (User.Identity.IsAuthenticated)
            {
                @if (User.IsInRole("Admin"))
                {

                    <a asp-area="" asp-controller="Objekts" asp-action="Index">Врати се на почетна</a>

                }
            }
            else
            {
                <a asp-area="" asp-controller="Account" asp-action="Login">Врати се на почетна</a>
            }

        </div>
        </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
